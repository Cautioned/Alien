{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Alien",
  "version": "0.1.0",
  "identifier": "com.cautioned.alien",
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main",
          "permissions": [
            "core:default",
            "opener:default",
            "http:default"
          ],
          "platforms": ["linux", "macOS", "windows"],
          "urls": ["http://localhost:*/*"]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Copyright Â© 2025 Cautioned",
    "category": "Productivity",
    "licenseFile": "LICENSE.txt",
    "shortDescription": "A video synchronization tool for animation reference",
    "longDescription": "Alien is a video synchronization tool for animation reference. It's to be used with the Alien Roblox Studio plugin, which will allow you to sync animations with moon animator or any other plugins that use the api.",
    "resources": [
      "libmpv-2.dll",
      "scripts/*",
      "templates/*"
    ],
    "windows": {
      "nsis": {
        "languages": ["English"],
        "displayLanguageSelector": false,
        "installMode": "currentUser",
        "installerIcon": "icons/icon.ico"
      }
    }
  }
}
